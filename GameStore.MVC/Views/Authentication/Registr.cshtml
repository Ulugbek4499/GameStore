@using GameStore.Application.Models;
@model RegisterModel
@{
    Layout = "_AuthenticationLayout";
 
}

<div class="card w-450px h-470px mt-20 mb-100 " style="margin-left:auto; margin-right:auto; box-shadow: 0px 0px 15px gray; background-color: #D3D3D3">
    <br />
    <div class="py-10 pe-10 px-10">
        <form asp-controller="Authentication" asp-action="Regestr" method="post" class="container">
            <div class="text-center mb-11">
                <p class="fs-4 fw-bolder mb-3">
                    Register an account
                </p>
            </div>
            <div class="mt-5">
                <label class="required form-label">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control form-control-solid" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control form-control-solid" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Email Address</label>
                <input type="email" asp-for="EmailAddress" class="form-control form-control-solid" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Username</label>
                <input type="text" asp-for="UserName" class="form-control form-control-solid" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Password</label>
                <input type="password" asp-for="Password" class="form-control form-control-solid" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Role</label>
                <select asp-for="Role" class="form-control form-control-solid">
                    <option value="Manager">Manager</option>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <div class="mt-20 mb-10 bring-center">
                <input type="submit" class="btn btn-registan" value="REGISTER" />
            </div>
        </form>
        <br /><br />
        <p class="message bring-center">Already registered? <a class="text-success" href="login"> Sign in</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
