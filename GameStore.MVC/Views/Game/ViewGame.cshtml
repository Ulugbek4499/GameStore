@using GameStore.Application.UseCases.Games

@{
    Layout = "_Layout";
}

@model GameResponse

<div class="container">
    <div class="row mt-4">
        <div class="col-md-4">
            <img src="~/@Model.Picture" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p class="lead">$@Model.Price</p>
            <p>@Model.Description</p>
            <p>
                Genres:
                @foreach (var genre in Model.Genres)
                {
                    <span class="badge bg-primary">@genre.Name</span>
                }
            </p>
            <div class="mt-4">
                <a href="@Url.Action("UpdateGame", new { id = Model.Id })" class="btn btn-secondary"><i class="fas fa-pen-to-square"></i> Edit Game</a>
                <a href="@Url.Action("DeleteGame", new { id = Model.Id })" class="btn btn-danger"><i class="fas fa-trash-can"></i> Delete Game</a>
            </div>
        </div>
    </div>
</div>
