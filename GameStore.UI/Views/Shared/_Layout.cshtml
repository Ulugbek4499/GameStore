<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameStore.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameStore.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
</head>
<body class="bg-black">

    <div class="container1">
        <div class="container2">
            <div style="display:flex; align-items: center;">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand text-white">
                    <img src="~/StarIcon.png" alt="Star Icon" width="30" height="30">
                    Game Store
                </a>
                <nav class="navbar navbar-expand-sm navbar-dark bg-black">
                    <ul class="navbar-nav ml-auto ">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Games</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-body-tertiary">Community</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">About</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Support</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div style="display:flex; align-items:center;">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <partial name="_LoginPartial" class="nav-link" />
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="body-faza">
        <div class="body-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="container">
        <footer id="main-footer" class="border-top footer text-muted bg-black footer-content">
            <div class="">
                <p>
                    Game Store
                </p>
            </div>
            <div class="">
                <p>
                    Copyright &copy;
                    <span id="year"></span>
                </p>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>$('#year').text(new Date().getFullYear());</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
