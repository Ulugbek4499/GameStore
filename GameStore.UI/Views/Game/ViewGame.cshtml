@using GameStore.Application.UseCases.Games

@{
    Layout = "_Layout";
}

@model GameResponse

<div class="move-margin">
    <!-- Game Details -->
    <div class="card text-white border-0" style="background-color: #1e1e1e; width: 100%;">
        <!-- Game Image -->
        <div class="image-container-view">
            <img src="~/@Model.Picture" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="card-body">
            <!-- Game Title and Price -->
            <div class="row">
                <div class="col">
                    <p class="text-price lead card-text">@Model.Name</p>
                    <p class="display-6">$@Model.Price</p>
                </div>
                <div class="col">
                </div>
                <div class="col">
                    <a href="#" class="btn btn-success ms-5">BUY</a>
                </div>
            </div>
            <hr />
            <!-- Game Genres -->
            <p>
                @foreach (var genre in Model.Genres)
                {
                    <button class="hidden-corners-button">@genre.Name</button>
                }
            </p>
            <br />
            <!-- Game Description -->
            <div class="row">
                <h6 class="thin-version">@Model.Description</h6>
            </div>
            <br />
            <!-- Edit and Delete Buttons -->
            <div class="row">
                <div class="col">
                    <a asp-action="UpdateGame" asp-route-id="@Model.Id" class="btn btn-primary">Edit Game</a>
                </div>
                <div class="col">
                    <a asp-action="DeleteGame" asp-route-id="@Model.Id" class="btn btn-danger">Delete Game</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Comment Section -->
    <div class="mt-4">
        <!-- Comment Input -->
        <div>
            <input type="text" id="commentInput" placeholder="Write a comment..." />
            <button id="saveCommentBtn" data-game-id="@Model.Id" data-user-id="YOUR_USER_ID">Save</button>
        </div>

        <!-- Comments -->
        <div id="comments">
            @foreach (var comment in Model.Comments)
            {
                <div class="comment">
                    <p>@comment.Text</p>
                    <button class="replyBtn" data-parent-id="@comment.Id">Reply</button>
                    <button class="showRepliesBtn" data-comment-id="@comment.Id">Show Replies</button>
                    
                    <!-- Reply Input -->
                    <div class="replyInput">
                        <input type="text" class="replyText" placeholder="Write a reply..." />
                        <button class="saveReplyBtn" data-game-id="@Model.Id" data-parent-id="@comment.Id" data-user-id="YOUR_USER_ID">Save Reply</button>
                    </div>
                    
                    <!-- Child Comments (Replies) -->
                    <div class="childComments">
                        @foreach (var reply in comment.ChildComments)
                        {
                            <div class="comment">
                                <p>@reply.Text</p>
                                <button class="replyBtn" data-parent-id="@reply.Id">Reply</button>
                                <button class="showRepliesBtn" data-comment-id="@reply.Id">Show Replies</button>
                                
                                <!-- Reply Input -->
                                <div class="replyInput">
                                    <input type="text" class="replyText" placeholder="Write a reply..." />
                                    <button class="saveReplyBtn" data-game-id="@Model.Id" data-parent-id="@reply.Id" data-user-id="YOUR_USER_ID">Save Reply</button>
                                </div>
                                
                                <!-- Child Comments (Replies) -->
                                <div class="childComments">
                                    <!-- Repeat the same structure for nested replies -->
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

